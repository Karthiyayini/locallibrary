doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
  body
    .navbar.navbar-inverse.navbar-static-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Library
        .collapse.navbar-collapse
          ul.nav.navbar-nav
            
            if user
              li
                a(href='/logout') Logout
            else
              li.active
                a(href='#') Login
              li
                a(href='/catalog/customer/create') Signup
  .container
      block content

          .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Log in

            // register form
            form(method='POST' action='')
              
              div.form-group
                label(for='email') Email:
                input#email.form-control(type='email', placeholder='name@email.com' name='email')
              div.form-group
                label(for='pw') Password:
                input#pw.form-control(type='password' , placeholder='Password' name='password')
             
              button.btn.btn-primary(type='submit') Log in
              a.btn.btn-link(href='/catalog/customer/forget_password') Forgot Password?
              div
              if errors 
               ul
                for error in errors
                  li!= error.msg
              
                
